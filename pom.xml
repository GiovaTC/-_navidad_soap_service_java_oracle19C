<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>Navidad_SoapService</artifactId>
    <version>1.0-SNAPSHOT</version>

    <!-- ============================
         DEPENDENCIAS
    ============================ -->
    <dependencies>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>rt</artifactId>
            <version>2.3.3</version>
        </dependency>

        <dependency>
            <groupId>com.oracle.database.jdbc</groupId>
            <artifactId>ojdbc8</artifactId>
            <version>21.9.0.0</version>
        </dependency>
    </dependencies>

    <!-- ============================
         PROPIEDADES JAVA 21
    ============================ -->
    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>

            <!-- ============================
                 COMPILADOR
            ============================ -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>21</source>
                    <target>21</target>
                </configuration>
            </plugin>

            <!-- ============================
                 EJECUCIÃ“N CON add-opens PARA JAVA 21
            ============================ -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>com.example.EndpointPublisher</mainClass>

                    <jvmArgs>
                        --add-opens java.base/jdk.internal.misc=ALL-UNNAMED
                        --add-opens java.base/java.lang=ALL-UNNAMED
                        --add-opens java.base/sun.nio.ch=ALL-UNNAMED
                        --add-opens java.base/java.io=ALL-UNNAMED
                        --add-opens java.xml.bind/javax.xml.bind=ALL-UNNAMED
                        --add-opens java.xml/javax.xml=ALL-UNNAMED
                        --add-opens java.xml.ws/javax.xml.ws=ALL-UNNAMED
                        --add-opens java.xml.soap/javax.xml.soap=ALL-UNNAMED
                        --add-opens java.rmi/sun.rmi.transport=ALL-UNNAMED
                    </jvmArgs>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
